<MudContainer Fixed="true" Class="flex align-center justify-center" Style="height: calc(100vh - 90px);">
    <MudPaper Class="d-flex align-center justify-center" Style="height:100%;">
        <MudStack Class="d-flex align-center justify-center">
            <MudIcon Icon="@Icons.Material.Filled.Workspaces" Style="font-size: 15rem;" />
            <MudAlert Severity="Severity.Error">@Text</MudAlert>
            <MudButton OnClick="SwitchWorkspace" Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Outlined.Home">
                SWITCH WORKSPACE
            </MudButton>
        </MudStack>
    </MudPaper>
</MudContainer>

@code {
    [Parameter]
    public string Text { get; set; }

    private void SwitchWorkspace() 
    {
        _navigationManager.NavigateTo("/", forceLoad: true);
    }
}
