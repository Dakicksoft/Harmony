@if (!_dataLoaded)
{
    <MudSkeleton SkeletonType="SkeletonType.Rectangle" Height="50px" />
    <MudCardContent>
        <MudSkeleton Width="100%" />
        <MudSkeleton Width="100%" />
    </MudCardContent>
}
else if (_branches.Any())
{
    <MudCard>
        <MudButton StartIcon="@Icons.Custom.Brands.GitHub" Class="mt-2"
                   Variant="Variant.Outlined" FullWidth="true" OnClick="ViewRepositoryActivityDetails"
                   Color="Color.Primary">VIEW DETAILS</MudButton>
        <MudList Clickable="true">
            @foreach (var branch in _branches)
            {
                <MudListItem Text="@branch.Name" IconColor="Color.Info" Icon="@Icons.Material.Filled.AltRoute">
                    <NestedList>
                        @if (branch.Commits.Any())
                        {
                            <MudListItem Text="@($"{branch.Commits.Count} commits")" Icon="@Icons.Material.Filled.Route" IconColor="Color.Secondary" />
                        }
                        @if (branch.PullRequests.Any())
                        {
                            <MudListItem Text="@($"{branch.PullRequests.Count} pull request(s)")" Icon="@Icons.Material.Filled.Merge" IconColor="Color.Secondary" />
                        }
                    </NestedList>
                </MudListItem>
            }
        </MudList>
    </MudCard>
}
