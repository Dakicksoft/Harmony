@page "/workspaces/{id}/{name}"
@inject Microsoft.Extensions.Localization.IStringLocalizer<Workspace> _localizer

@if (_userBoardsLoading)
{
    <Loader />
}
else
{
    <MudGrid>
        @foreach (var board in _userBoards)
        {
            <MudItem xs="12" sm="6" md="4" Class="cursor-pointer" @onclick="() => NavigateToBoard(board)">
                <MudCard>
                    <MudCardHeader Class="pb-0">
                        <CardHeaderContent>
                            <MudStack>
                                <MudText Typo="Typo.h5">@board.Title</MudText>
                            </MudStack>
                        </CardHeaderContent>
                        <CardHeaderActions>
                            <MudTooltip Text="Visibility">
                                <MudChip Icon="@Icons.Material.Filled.Visibility" IconColor="GetVisibilityColor(board.Visibility)">@board.Visibility</MudChip>
                            </MudTooltip>
                        </CardHeaderActions>
                    </MudCardHeader>
                    <MudCardContent>
                        <MudText Typo="Typo.h6">@board.Description</MudText>
                        <MudDivider />
                        @if (_boardActivities.Any())
                        {
                            <MudTimeline TimelineOrientation="TimelineOrientation.Vertical" 
                            TimelinePosition="TimelinePosition.Start" Reverse="false">
                                @foreach(var activity in _boardActivities)
                                {
                                    <MudTimelineItem Color="Color.Success" Variant="Variant.Filled">
                                        <ItemContent>
                                            <MudAlert Severity="Severity.Info"><b>@activity.Actor</b> @((MarkupString)activity.Activity)</MudAlert>
                                        </ItemContent>
                                        <ItemOpposite>
                                            <MudText Color="Color.Default">@activity.DateCreated.ToShortDateString()</MudText>
                                        </ItemOpposite>
                                    </MudTimelineItem>
                                }
                            </MudTimeline>
                        }
                    </MudCardContent>
                </MudCard>
            </MudItem>
        }
    </MudGrid>
}