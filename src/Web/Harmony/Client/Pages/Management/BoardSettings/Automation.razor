@page "/projects/{id}/settings/automation"

<MudContainer Style="position:relative;height:calc(100vh - 100px);overflow:hidden">
    <MudDrawer @bind-Open="_drawerOpened" Fixed="false" Anchor="Anchor.End" 
               Elevation="0" Width="400px"
               Variant="@DrawerVariant.Persistent">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Settings</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.AccountBox">Profile</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.ShoppingCart">Orders</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.History">Order History</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudPaper Class="d-flex flex-wrap gap-4" Elevation="0">
        @foreach (var template in _templates)
        {
            <MudCard Class="ma-4" Style="width:300px;height:300px;">
                <MudCardContent>
                    <MudText>@template.Title</MudText>
                        <MudText Typo="Typo.body2">@((MarkupString)template.Description)</MudText>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Variant="Variant.Text" OnClick="@(() => _drawerOpened = !_drawerOpened)" Color="Color.Primary">Learn More</MudButton>
                    </MudCardActions>
                </MudCard>
        }
    </MudPaper>
</MudContainer>
