@page "/workspaces/{id}/{name}/boards/"

@if (!_loading)
{
    <MudPaper Class="d-flex flex-wrap gap-4" Elevation="0">

        @foreach (var board in _boards)
        {
            <MudCard Style="height:300px;width:300px">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">@board.Title</MudText>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudTooltip>
                            <ChildContent>
                                <MudIconButton Icon="@Icons.Material.Filled.Info" />
                            </ChildContent>
                            <TooltipContent>
                                <MudText Typo="Typo.h6">@board.Description</MudText>
                            </TooltipContent>
                        </MudTooltip>
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent>
                    <MudStack Row="false">
                        <MudPaper Class="pa-3">
                            <MudAvatarGroup Max="4" Spacing="2" MaxColor="Color.Primary">
                                @for (var i = 0; i < @board.TotalUsers; i++)
                                {
                                    <MudAvatar Color="Color.Primary">M</MudAvatar>
                                }
                            </MudAvatarGroup>
                        </MudPaper>
                        <MudPaper Class="pa-3">
                            <MudStack Row="true">
                                @board.TotalItemsCompleted / @board.TotalItems
                            </MudStack>
                        </MudPaper>
                        <MudPaper Class="pa-3">Item 3</MudPaper>
                    </MudStack>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary">Read More</MudButton>
                </MudCardActions>
            </MudCard>
        }
    </MudPaper>
}


