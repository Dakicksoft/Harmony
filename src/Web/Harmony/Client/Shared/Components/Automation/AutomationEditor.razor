<MudDrawer @bind-Open="IsOpened" @ref="_drawer" 
           Fixed="false" Anchor="Anchor.End"
           Elevation="0" Width="400px"
           Variant="@DrawerVariant.Persistent">
    <MudDrawerHeader>
        <MudText Typo="Typo.h6">Automation configuration</MudText>
    </MudDrawerHeader>
    @if (AutomationType.HasValue)
    {
        switch(AutomationType)
        {
            case Domain.Enums.AutomationType.SyncParentAndChildIssues:
                <SyncParentAndChildIssues BoardId="BoardId" AutomationType="AutomationType.Value" />
                break;
        }
    }
</MudDrawer>